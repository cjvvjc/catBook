<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cat Gallery</title>
    <!-- ADD STYLESHEEt -->
</head>
<body>

  <%- include('partials/navbar') %>

  <div>
    <div>
      <% cats.forEach(cat => {%>
        <div>
          <div>
            <img src="/images/<%= cat.image %>" alt="cat image">
            <div>
              <h5><%= cat.name %></h5>
              <p>
                Age: <%= cat.age %> <br>
                Favorite Food: <%= cat.favoriteFood %> <br>
                Fun Fact: <%= cat.funFact %>
              </p>
            </div>
          </div>
          <div>
            <a href="/edit/<%= cat._id %>">Edit</a>
            <form action="/delete/<%= cat._id %>" method="POST"> <!--delete the item-->
              <button type="submit">Delete</button> <!--reload the page-->
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>